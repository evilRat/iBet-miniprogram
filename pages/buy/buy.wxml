<!--pages/buy/buy.wxml-->
<view wx:if="{{isNotAuthorized}}">
  <view wx:if="{{canIUse}}">
    <view class='header'>
      <image src='/images/iBet.png'></image>
    </view>

    <view class='content'>
      <view>申请获取以下权限</view>
      <text>获得你的公开信息(昵称，头像等)</text>
    </view>

    <button class='bottom' type='primary' open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="bindGetUserInfo">
      授权登录
    </button>
  </view>
  <view wx:else>请升级微信版本</view>
</view>

<view wx:else class="page">
  <view class='page_hd'>
    <view class="weui-cells__title">选择</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_select">
        <view class="weui-cell__hd weui-cell__hd_in-select-after">
          <view class="weui-label">投注站</view>
        </view>
        <view class="weui-cell__bd">
          <picker bindchange="bindBetSiteChange" value="{{betSiteIndex}}" range-key="{{'siteName'}}" range='{{betSites}}'>
            <view class="weui-select weui-select_in-select-after">{{betSites[betSiteIndex].siteName}}</view>
          </picker>
        </view>
      </view>
    </view>
    <view>
      <view class="weui-cells__title">余额
        <text style='color:red;font-size:50rpx'>
          {{userSite.balance}}
        </text>
      </view>
    </view>

    <view>
      <text class="weui-cells__title">可投注玩法</text>
    </view>
    <view wx:for="{{bets}}" wx:for-index="betIndex" wx:key="id">
      <view>
        <text hidden='true' class='betType-text'>{{bets[betIndex].betName}}</text>
        <button class='betType-btn' bindtap='clickBetTypeBtn' data-current-bet="{{item}}">
          <image class='betType-pic' src='images/{{bets[betIndex].icon}}.png'></image>
        </button>
      </view>
    </view>


  </view>
</view>