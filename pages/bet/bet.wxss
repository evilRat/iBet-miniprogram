/* pages/bet/bet.wxss */

.ballBox {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.betName {
  font-size: 60rpx;
  margin-left: 20rpx;
}
.redBall {
  height: 60rpx;
  width: 60rpx;
  margin: 5rpx;
  text-align: center;
  background-size: 60rpx 60rpx;
  background-image: url("http://cdn-files.tourmade.com/im/red.png");
}

.blueBall {
  height: 60rpx;
  width: 60rpx;
  margin: 5rpx;
  text-align: center;
  background-size: 60rpx 60rpx;
  background-image: url("http://cdn-files.tourmade.com/im/blue.png");
}

.redBallSelected {
  height: 60rpx;
  width: 60rpx;
  text-align: center;
  background-size: 60rpx 60rpx;
  background-image: url("http://cdn-files.tourmade.com/im/red_selected.png");
}

.blueBallSelected {
  height: 60rpx;
  width: 60rpx;
  text-align: center;
  background-size: 60rpx 60rpx;
  background-image: url("http://cdn-files.tourmade.com/im/blue_selected.png");
}

.threeBalls {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.bet-button {
  width: 60%;
  height: 80rpx;
  border-color: red;
  border-width: 1rpx;
  background-color: red;
  margin-top: 20rpx;
  line-height: 80rpx;
  border-radius: 95rpx;
}