/* pages/bet/bet.wxss */

.ballBox {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.betName {
  font-size: 60rpx;
  margin-left: 20rpx;
}
.redBall {
  height: 60rpx;
  width: 60rpx;
  margin: 5rpx;
  text-align: center;
  background-size: 60rpx 60rpx;
  background-image: url('data:image/png;base64,');
}

.blueBall {
  height: 60rpx;
  width: 60rpx;
  margin: 5rpx;
  text-align: center;
  background-size: 60rpx 60rpx;
  background-image: url("data:image/png;base64,");
}

.redBallSelected {
  height: 60rpx;
  width: 60rpx;
  text-align: center;
  background-size: 60rpx 60rpx;
  background-color: red;
  border-radius: 50%;
}

.blueBallSelected {
  height: 60rpx;
  width: 60rpx;
  text-align: center;
  background-size: 60rpx 60rpx;
  background-color: blue;
  border-radius: 50%;
}

.threeBalls {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.bet-button-red {
  width: 60%;
  height: 80rpx;
  border-color: red;
  border-width: 1rpx;
  background-color: red;
  margin-top: 20rpx;
  line-height: 80rpx;
  border-radius: 95rpx;
  color: white;
}

.bet-button-blue {
  width: 60%;
  height: 80rpx;
  border-color: blue;
  border-width: 1rpx;
  background-color: blue;
  margin-top: 20rpx;
  line-height: 80rpx;
  border-radius: 95rpx;
  color: white;
}